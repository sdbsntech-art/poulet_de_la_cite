    <script>
         // JavaScript pour le menu mobile et header scroll
         document.addEventListener('DOMContentLoaded', function() {
            const header = document.getElementById('header');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const nav = document.getElementById('nav');
            
            // Header scroll effect
            window.addEventListener('scroll', function() {
                if (window.scrollY > 100) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
            
            // Mobile menu toggle
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function() {
                    nav.classList.toggle('active');
                    mobileMenuBtn.innerHTML = nav.classList.contains('active') 
                        ? '<i class="fas fa-times"></i>' 
                        : '<i class="fas fa-bars"></i>';
                });
            }
            
            // Fermer le menu mobile en cliquant sur un lien
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    nav.classList.remove('active');
                    if (mobileMenuBtn) mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                });
            });
            
            // Animation au scroll pour les sections
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            // Observer les éléments à animer
            const animateElements = document.querySelectorAll('.partnership-card, .advantage-card, .process-step');
            animateElements.forEach(el => {
                el.style.opacity = 0;
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });

            // Gestion du formulaire
            const partnershipForm = document.getElementById('partnershipForm');
            const partnershipFeedback = document.getElementById('partnershipFeedback');
            if (partnershipForm) {
                partnershipForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    partnershipFeedback.style.display = 'none';

                    const fd = new FormData(partnershipForm);
                    const required = ['companyName','activityType','contactName','phone','email','address','partnershipType'];
                    for (let k of required) {
                        if (!fd.get(k) || fd.get(k).toString().trim() === '') {
                            partnershipFeedback.style.display = 'block';
                            partnershipFeedback.style.color = '#d9534f';
                            partnershipFeedback.textContent = 'Veuillez remplir tous les champs obligatoires (*)';
                            return;
                        }
                    }

                    // phone + email basic validation
                    const phone = fd.get('phone').toString().replace(/\s/g,'');
                    const email = fd.get('email').toString();
                    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!/^\+?\d{7,15}$/.test(phone)) {
                        partnershipFeedback.style.display = 'block';
                        partnershipFeedback.style.color = '#d9534f';
                        partnershipFeedback.textContent = 'Veuillez entrer un numéro de téléphone valide.';
                        return;
                    }   
                    if (!emailPattern.test(email)) {
                        partnershipFeedback.style.display = 'block';
                        partnershipFeedback.style.color = '#d9534f';
                        partnershipFeedback.textContent = 'Veuillez entrer une adresse email valide.';
                        return;
                    }
                    // Submit form data via Fetch API
                    fetch(partnershipForm.action, {
                        method: 'POST',
                        body: fd,
                        headers: {
                            'Accept': 'application/json'
                        }
                    }).then(response => {
                        if (response.ok) {
                            partnershipFeedback.style.display = 'block';
                            partnershipFeedback.style.color = '#28a745';
                            partnershipFeedback.textContent = 'Merci ! Votre demande de partenariat a été envoyée avec succès.';
                            partnershipForm.reset();
                        } else {
                            return response.json().then(data => {
                                throw new Error(data.error || 'Une erreur est survenue lors de l\'envoi du formulaire.');
                            });
                        }
                    }).catch(error => {
                        partnershipFeedback.style.display = 'block';
                        partnershipFeedback.style.color = '#d9534f';
                        partnershipFeedback.textContent = error.message;
                    });
                });
            }
        });
    </script>